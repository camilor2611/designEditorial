\tcbset{
	generalStyle/.style={
		enhanced,
		boxrule=0.2mm,
		attach boxed title to top left={
			xshift=0.6cm,yshift*=2mm-\tcboxedtitleheight
		},
		boxed title style={
			frame code={
				\path[left color=tcbcolback!60!black,right color=tcbcolback!60!black,middle color=tcbcolback!80!black]
				([xshift=0mm]frame.north west) -- ([xshift=0mm]frame.north east)[rounded corners=0mm]--
				([xshift=0mm,yshift=0mm]frame.north east)-- (frame.south east) -- (frame.south west)--
				([xshift=0mm,yshift=0mm]frame.north west)[sharp corners]-- cycle;
			},
			interior engine=empty,
		},
		fonttitle=\normalsize\bfseries,
		fontupper=\normalsize,
		arc=0.5mm,boxrule=1mm,
		frame hidden,
		breakable,
	}
}
