\tcbset{
	bannerCoverSyle/.style={
		halign=left,
		enhanced,
		valign=center, 
		interior style={
			top color=backContentCover,
			bottom color=backContentCover
		}, 
		bottom=0.5cm, 
		left=0.5cm, 
		top=0.5cm,
		sharp corners=all, 
		frame hidden,
		opacityback=1,
		width=12.2cm, 
		% drop shadow southwest
	}
}
\tcbset{
	bannerLogoCoverSyle/.style={
		enhanced,
		halign=left,
		valign=center, 
		frame hidden,		
	}
}

\newcommand{\printcontentcover}{
	\begin{tcolorbox}[bannerCoverSyle]
		{
			\color{textContentCover}
			{\Huge\textbf{\printtitle}}\\
			\vspace{1cm}
			{\huge\printauthor} \\
		}
	\end{tcolorbox}
	\vspace{2cm}
	\begin{tcolorbox}[bannerLogoCoverSyle, transparent, width = 8cm, flush right]
		\checkdofor{printlogo}{
			\printlogo
		}{}
	\end{tcolorbox}
}

\newcommand\printcontentcoverpage{
	\begin{tcolorbox}[transparent, width = \textwidth]
		\begin{center}
			{\Huge\textbf{\printtitle}} \\
			{\Large\printauthor} 
		\end{center}
		\begin{center}
			{
				\color{titlePage}\rule{\linewidth}{2pt}
				\hspace{2cm}\rule{\linewidth-2cm}{2pt}
			}
		\end{center}
	\end{tcolorbox}
	\begin{flushright}
		\Large\printedition
	\end{flushright}
	\begin{figure*}[!b]
		\centering
		\checkdofor{printlogo}{
			\printlogo
		}{}
	\end{figure*}
}

