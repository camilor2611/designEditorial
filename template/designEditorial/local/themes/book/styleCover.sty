	\renewcommand{\thepage}{Cover}
	\IfFileExists{./src/cover/cover.tex}{
		\import{./src/cover/}{cover.tex}
	}{
		\import{\pathtemplate/\compilefrom/themes/\namefoldertheme/}{cover.tex}
	}
}

\newcommand\getcoverpage{
\ifcoverpagecontent
	\begin{coverpage}
		\printcontentcoverpage
	\end{coverpage}
\fi
}