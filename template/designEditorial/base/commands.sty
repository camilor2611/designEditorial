\newboolean{booleanActiveAppendix}
\newboolean{forceTitle}
\let\@typeappendix\relax
\newcommand\forcetitlechapter[1]{%
	\setboolean{forceTitle}{#1}
}
\newcommand\typeappendix[1]{%
	\setboolean{booleanActiveAppendix}{#1}
}
\newboolean{authorExist}
\let\@chapterauthor\relax
\newcommand\chapterauthor[1]{%
	\gdef\@chapterauthor{
		#1
	}
	\setboolean{authorExist}{true}
}
\let\@chapterimage\relax
\newcommand\chapterimage[2]{%
}
%reset
\newcommand\nochapterimage{
	\let\@chapterimage\relax
}
\newcommand\nochapterauthor{
	\setboolean{authorExist}{false}
	\let\@chapterauthor\relax
}
\newcommand\cleanalldata{
	\nochapterimage
	\nochapterauthor
	\typeappendix{false}
	\forcetitlechapter{false}
}
