\tcbset{
	bannerCoverSyle/.style={
		halign=left,
		enhanced,
		valign=center, 
		interior style={
			top color=white,
			bottom color=white
		}, 
		bottom=1cm, 
		right=0.8cm, 
		left=0.8cm, 
		top=1cm,
		sharp corners=all, 
		opacityback=0.8,
		width=380pt,
		colframe=colorPer1!75!black,
		drop shadow southwest
	}
}
\tcbset{
	bannerLogoCoverSyle/.style={
		enhanced,
		halign=left,
		valign=center, 
		frame hidden,		
	}
}
\newcommand{\printcontentcover}{
	\vspace{6.5cm}
	\begin{tcolorbox}[bannerCoverSyle]
		{%
			\color{colorPer1}
			{\Huge\textbf{\printtitle}} \\
			{\Large\printauthor} \\
			% \rule{\paperwidth}{1pt}
		}
		\begin{flushright}
			{
				\color{colorPer1} 
				\checkdofor{printedicion}{
					\huge\textbf{\printedicion}\hspace{1cm}
				}{}
			}
		\end{flushright}
	\end{tcolorbox} 
	\begin{tcolorbox}[bannerLogoCoverSyle, transparent, height = 5cm, flush right]
		\checkdofor{printlogo}{
			\printlogo
		}{}
	\end{tcolorbox}
}
\newcommand\printcontentcoverpage{
	\begin{tcolorbox}[transparent, width = \textwidth]
		\begin{center}
			{\Huge\textbf{\printtitle}} \\
			{\Large\printauthor} 
		\end{center}
		\begin{center}
			{
				\colorprovide{contraportada}{gray}
				\color{contraportada}\rule{\linewidth}{2pt}
				\hspace{2cm}\rule{\linewidth-2cm}{2pt}
			}
		\end{center}
	\end{tcolorbox}
	\begin{flushright}
		\Large\printedicion
	\end{flushright}
	\begin{figure*}[!b]
		\centering
		\checkdofor{printlogo}{
			\printlogo
		}{}
	\end{figure*}
}