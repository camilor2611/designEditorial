\newcounter{logicHeader}
\def\textHeader{}
\newcommand{\textHeaderDef}[1]{#1.\textHeader}
    \pagestyle{fancy}
    \renewcommand{\headrule}{
        \color{lineaHeader}%
        \hrule width\headwidth height\headrulewidth depth\headrulewidth
    }
    \fancyhf{}
    \ifpageonheader
        \fancyhead[LE, RO]{
            \normalsize\colorbox{backNumeroHeader}{\color{colorNumeroHeader}\sffamily\strut\quad\thepage\quad}
        }
    \else
        \ifpagefootcenter
            \fancyfoot[CE, CO]{\thepage}
        \else 
            \fancyfoot[RO, LE]{\thepage}
        \fi
    \fi
    \fancyhead[LO]{
    	\ifnum\value{logicHeader}>0 
    		{\textcolor{textHeader}{\textHeaderDef{\thechapter}}}
    	\else 
    		{\bfseries\textcolor{textHeader} \rightmark}% 
    	\fi
    }
    \fancyhead[RE]{
    	\ifnum\value{logicHeader}>0 
    		{\textcolor{textHeader}{\textHeaderDef{\thechapter}}}
    	\else 
    		{\textcolor{textHeader} \leftmark}% 
    	\fi
    }


\fancypagestyle{plain}{
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
    \ifpageonheader
        \fancyfoot[CE, CO]{}
    \else
        \ifpagefootcenter
            \fancyfoot[CE, CO]{\thepage}
        \else
            \fancyfoot[RO, LE]{\thepage} 
        \fi
    \fi
}


